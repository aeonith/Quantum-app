{
  "expo": {
    "name": "QuantumCoin",
    "slug": "quantum-coin",
    "scheme": "quantumcoin",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B0F17"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aeonith.quantumcoin",
      "infoPlist": {
        "NSCameraUsageDescription": "Scan QR codes to send/receive QuantumCoin",
        "NSFaceIDUsageDescription": "Use Face ID to quickly unlock your wallet"
      }
    },
    "android": {
      "package": "com.aeonith.quantumcoin",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B0F17"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-secure-store"]
  }
}
